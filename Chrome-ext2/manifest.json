{
  "manifest_version": 3,
  "name": "Gemini Chatbot",
  "version": "1.0",
  "description": "A Chrome extension chatbot using Gemini AI",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}